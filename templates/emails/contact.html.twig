<table cellpadding="0" cellspacing="0" width="100%" border="0">
    <tr>
        <td>Property name</td>
        <td><a href="{{ url('property.show', {id: contact.property.id, slug: contact.property.slug}) }}"></a>{{ contact.property.title }}</td>
    </tr>
    <tr>
        <td>Firstname</td>
        <td>{{ contact.firstname }}</td>
    </tr>
    <tr>
        <td>Lastname</td>
        <td>{{ contact.lastname }}</td>
    </tr>
    <tr>
        <td>Phone</td>
        <td>{{ contact.phone }}</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>{{ contact.email }}</td>
    </tr>
    <tr>
        <td>Message</td>
        <td>{{ contact.message | nl2br }}</td>
    </tr>
</table>