{% extends 'base.html.twig' %}
{% block title property.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} rooms - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-size: 4rem;font-weight: bold">{{ property.formattedPrice }} €</div>
                    <a href="#" class=""btn btn-primary>Contact your agency</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
            <p>
                {{ property.description | nl2br }}
            </p>

            <div class="row">
                <div class="col-md-8">
                    <h2>Characteristics</h2>
                     <table class="table table-striped">
                         <tr>
                             <td>Living area</td>
                             <td>{{ property.surface }} m²</td>
                         </tr>
                         <tr>
                             <td>Rooms</td>
                             <td>{{ property.rooms }} m²</td>
                         </tr>
                         <tr>
                             <td>Bedrooms</td>
                             <td>{{ property.bedrooms }} m²</td>
                         </tr>
                         <tr>
                             <td>Floor</td>
                             <td>{{ property.floor }} m²</td>
                         </tr>
                         <tr>
                             <td>Heat</td>
                             <td>{{ property.heatType }} m²</td>
                         </tr>
                     </table>
                </div>
                <div class="col-md-4">
                      <h2>Specificities</h2>
                </div>
            </div>


    </div>
{% endblock %}