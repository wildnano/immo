{% extends 'base.html.twig' %}
{% block title property.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% if not form.vars.valid %}
                <div class="alert alert-danger">Bad request</div>
            {% endif %}
            <div class="row">
                <div class="col-md-8">
                    {% if property.filename %}
                        {#<img src="/images/properties/{{ property.filename }}" class="card-img-top" alt="" style="width:100%;height:auto;">#}
                        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }}"
                             class="card-img-top" alt="" style="width:100%;height:auto;">
                    {% else %}
                        <img src="{{ '/images/properties/sample.jpg' | imagine_filter('medium') }}" class="card-img-top"
                             alt="" style="width:100%;height:auto;">
                    {% endif %}
                </div>


                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} rooms - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-size: 4rem;font-weight: bold">{{ property.formattedPrice }}
                        €
                    </div>
                    <a href="#" class="" btn btn-primary>Contact your agency</a>
                    <div id="contactForm" class="mt-4">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.phone) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        <div class="form-group">
                            <button class="btn btn-primary">Send</button>
                        </div>
                        {{ form_end(form) }}
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Characteristics</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Living area</td>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Rooms</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Bedrooms</td>
                        <td>{{ property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Floor</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                    <tr>
                        <td>Heat</td>
                        <td>{{ property.heatType }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Specificities</h2>
                <ul class="list-group">
                    {% for tag in property.tags %}
                        <li class="list-group-item">{{ tag.name }}</li>
                    {%  endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}